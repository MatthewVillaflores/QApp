<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginBottom="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="current_date"
        android:id="@+id/addQueueCurrentDate"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 minutes waiting"
        android:id="@+id/addQueueWaitTime"
        android:textSize="16dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/addQueueCurrentDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addQueueEditTextName"
        android:hint="Name"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/addQueueWaitTime"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/addQueueEditTextMobileNumber"
        android:hint="Mobile Number"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/addQueueEditTextName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:lines="4"
        android:id="@+id/addQueueEditTextNotes"
        android:hint="Notes"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/addQueueEditTextMobileNumber" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addQueueEditTextNotes"
        android:layout_centerHorizontal="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/addQueueCancelButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Queue"
            android:id="@+id/addQueueAddButton"/>
    </LinearLayout>
</RelativeLayout>