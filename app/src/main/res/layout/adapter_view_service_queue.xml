<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#"
        android:textSize="18dp"
        android:layout_margin="18dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/adapter_queue_id"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="queue_name"
        android:textSize="18dp"
        android:layout_margin="8dp"
        android:layout_toRightOf="@id/adapter_queue_id"
        android:id="@+id/adapter_queue_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note: "
        android:textSize="12dp"
        android:layout_marginLeft="8dp"
        android:textColor="#FFFF4444"
        android:layout_below="@id/adapter_queue_name"
        android:layout_toRightOf="@id/adapter_queue_id"
        android:id="@+id/adapter_label_queue_note"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="queue_note"
        android:textSize="12dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/adapter_label_queue_note"
        android:layout_below="@id/adapter_queue_name"
        android:id="@+id/adapter_queue_note"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wait"
        android:textSize="18dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:id="@+id/adapter_queue_wait_time"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="arrival"
        android:textSize="18dp"
        android:layout_toLeftOf="@id/adapter_queue_wait_time"
        android:layout_toRightOf="@id/adapter_queue_name"
        android:gravity="right"
        android:layout_margin="10dp"
        android:id="@+id/adapter_queue_arrival_time"/>



</RelativeLayout>