<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tech.ivant.qapp.callNext">
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        android:layout_gravity="center_horizontal|top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:id="@+id/button"
        android:background="#d1090009"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/ic_action_cancel"
        android:textSize="16dp"
        android:textAppearance="@android:style/TextAppearance.Theme"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/app_bar"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/arrivalTime"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView5"
        android:layout_toLeftOf="@+id/textView9"
        android:layout_toStartOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/waitingTime"
        android:id="@+id/waitingTimeLabel"
        android:layout_marginTop="33dp"
        android:textColor="@android:color/holo_orange_dark"
        android:drawableLeft="@drawable/ic_action_clock"
        android:textSize="22dp"
        android:textIsSelectable="false"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/phone"
        android:id="@+id/phoneLabel"
        android:textColor="@android:color/holo_orange_dark"
        android:drawableLeft="@drawable/ic_action_phone_start"
        android:textSize="22dp"
        android:textIsSelectable="false"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/notes"
        android:id="@+id/notesLabel"
        android:layout_marginTop="69dp"
        android:textColor="@android:color/holo_orange_dark"
        android:drawableLeft="@drawable/ic_action_edit"
        android:textSize="22dp"
        android:textIsSelectable="false"
        android:layout_below="@+id/phoneLabel"
        android:layout_alignLeft="@+id/phoneLabel"
        android:layout_alignStart="@+id/phoneLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notes"
        android:id="@+id/textView9"
        android:layout_below="@+id/notesLabel"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/noShow"
        android:id="@+id/button2"
        android:background="#d1090009"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/ic_action_halt"
        android:textSize="16dp"
        android:textAppearance="@android:style/TextAppearance.Theme"
        android:layout_alignTop="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arrived"
        android:id="@+id/button3"
        android:background="#d1090009"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/ic_action_emo_basic"
        android:textSize="16dp"
        android:textAppearance="@android:style/TextAppearance.Theme"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView7"
        android:layout_below="@+id/waitingTimeLabel"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView4"
        android:layout_toRightOf="@+id/button"
        android:layout_above="@+id/notesLabel"
        android:layout_alignRight="@+id/phoneLabel"
        android:layout_alignEnd="@+id/phoneLabel"
        android:layout_below="@+id/phoneLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
