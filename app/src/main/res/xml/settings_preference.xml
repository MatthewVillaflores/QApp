<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/preferences_fragment">
    <EditTextPreference
        android:key="company_name"
        android:title="@string/settings_company_name"
        android:defaultValue="Company ABC" />
    <ListPreference
        android:key="language"
        android:title="Language"
        android:dialogTitle="Language"
        android:entries="@array/settings_languages"
        android:entryValues="@array/settings_languages"
        android:defaultValue="English"/>
    <ListPreference
        android:key="date_format"
        android:title="Date Format"
        android:dialogTitle="Date Format"
        android:entries="@array/settings_date_format"
        android:entryValues="@array/settings_date_format"
        android:defaultValue="mm/dd/yy"/>
    <CheckBoxPreference
        android:key="hour_format"
        android:title="Use 24-hour Time Format"
        android:defaultValue="false" />
    <PreferenceCategory>
        <CheckBoxPreference
            android:key="manual_call"
            android:title="Allow manual call of customers in the Queue List"
            android:summary="This will allow you to bypass the sequence order of customers, you can tap on the specific customer record and call him/her as the next in line."
            android:defaultValue="true" />
        <CheckBoxPreference
            android:key="automatic_clean"
            android:title="Automatically remove all customers in the Queue List by:"
            android:summary="This will make the system clear up the Customer Queue List everyday, during the selected cut off time"
            android:defaultValue="false" />
    </PreferenceCategory>

</PreferenceScreen>